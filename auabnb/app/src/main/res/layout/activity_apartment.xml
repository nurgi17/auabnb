<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    tools:context=".ApartmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/main_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_slider"
                android:layout_marginTop="16sp"
                android:layout_marginHorizontal="16dp"
                >
                <TextView
                    android:id="@+id/apartment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="The PondHouse"
                    />
                <TextView
                    android:layout_below="@+id/apartment_name"
                    android:id="@+id/apartment_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="20sp"
                    android:text="11 000 tenge/day"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/line"
                style="@style/Divider"
                android:layout_below="@+id/main_info"/>

            <RelativeLayout
                android:id="@+id/about_info"
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginHorizontal="16dp"
                >
                <TextView
                    android:id="@+id/about_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="About apartment"/>
                <TextView
                    android:id="@+id/about_text"
                    android:layout_below="@+id/about_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="20sp"
                    android:text="Betta zebra oto oarfish New Zealand smelt, spinyfin trout cod chub, 'candlefish jellynose fish.' Zebra pleco marlin, southern hake stoneroller minnow sea catfish goby surf sardine opah sunfish bluntnose knifefish. Gianttail Sundaland noodlefish bamboo shark, Japanese eel queen parrotfish eelpout, 'goosefish,' pÃ­ntano river shark."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/owner_info"
                android:layout_below="@id/about_info"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/about_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="About apartment"/>

                <RelativeLayout
                    android:id="@+id/owner"
                    android:layout_below="@+id/about_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                     <ImageView
                         android:id="@+id/owner_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/aktau"
                         android:background="@drawable/round_outline"
                         />
                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_toEndOf="@id/owner_image"
                        android:layout_marginTop="32dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textColor="@color/blackColor"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Marfa Lamova"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/owner_text"
                    android:layout_below="@+id/owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/blackColor"
                    android:textSize="20sp"
                    android:text="Clingfish streamer fish sea snail armored gurnard southern sandfish. Dragon goby jewfish, 'lagena,' ribbon eel dwarf loach yellowfin pike. Sandroller tadpole cod goblin shark horsefish trench banjo catfish golden shiner sweeper, 'sandroller parasitic catfish scat buri long-finned char, pipefish sockeye salmon,' neon tetra. Old World rivuline Blind shark Redfish barreleye escolar; minnow southern hake flagtail. Frilled shark barramundi salmon shark, searobin sardine yellow-eye mullet sandroller; leopard danio squaretail basking shark stonefish sea bream bocaccio combfish pikehead. Staghorn sculpin silver carp, glassfish yellow jack devil ray whalefish: slender snipe eel."/>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/call_action"
        android:layout_marginHorizontal="16dp"
        android:background="@color/mainColor"
        android:textAlignment="center"
        android:text="CALL"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="14dp"
        android:textColor="@color/whiteColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



</androidx.coordinatorlayout.widget.CoordinatorLayout>