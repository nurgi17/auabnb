<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/owner_info"
        android:layout_below="@id/about_info"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/about_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/blackColor"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="About apartment"/>

        <RelativeLayout
            android:id="@+id/owner"
            android:layout_below="@+id/about_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/owner_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/aktau"
                android:background="@drawable/round_outline"
                />
            <TextView
                android:id="@+id/owner_name"
                android:layout_toEndOf="@id/owner_image"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/blackColor"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Marfa Lamova"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/owner_text"
            android:layout_below="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:textAlignment="textStart"
            android:textColor="@color/blackColor"
            android:textSize="20sp"
            android:text="Clingfish streamer fish sea snail armored gurnard southern sandfish. Dragon goby jewfish, 'lagena,' ribbon eel dwarf loach yellowfin pike. Sandroller tadpole cod goblin shark horsefish trench banjo catfish golden shiner sweeper, 'sandroller parasitic catfish scat buri long-finned char, pipefish sockeye salmon,' neon tetra. Old World rivuline Blind shark Redfish barreleye escolar; minnow southern hake flagtail. Frilled shark barramundi salmon shark, searobin sardine yellow-eye mullet sandroller; leopard danio squaretail basking shark stonefish sea bream bocaccio combfish pikehead. Staghorn sculpin silver carp, glassfish yellow jack devil ray whalefish: slender snipe eel."/>


    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>